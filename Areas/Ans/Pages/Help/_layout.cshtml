<!DOCTYPE html>
<html lang="@Current.Culture" class="h-100">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@Current.BrowserTitle()</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />

</head>

<body class="d-flex flex-column h-100">
	<span id="totop" onclick="toTop();"><i class="bi-chevron-up"></i></span>


	<header id="site_header" class="bg-light py-3">
		<site-container>
			ANS HEADER
		</site-container>
	</header>


	<div id="node_navigator" class="p-3 bg-light border-top">
		<node-container>
			<partial name="/Areas/Ans/Helpers/DebugNodeNav.cshtml" />
		</node-container>
	</div>


	<main role="main">
		<page-container>
			<partial name="/Areas/Ans/Helpers/Breadcrumbs.cshtml" />
			<partial name="/Areas/Ans/Helpers/PageTitle.cshtml" />
			<partial name="/Areas/Ans/Helpers/PageSlaves.cshtml" />
		</page-container>
		<page-container-body class="page-body mb-5">
			@RenderBody()

			<hr />
			<partial name="/Areas/Ans/Helpers/DebugCurrent.cshtml" />
		</page-container-body>
	</main>


	<div class="mt-auto">

		<footer id="site_footer" class="bg-dark text-light py-3">
			<site-container>
				ANS FOOTER
			</site-container>
		</footer>

	</div>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>

</body>
</html>
